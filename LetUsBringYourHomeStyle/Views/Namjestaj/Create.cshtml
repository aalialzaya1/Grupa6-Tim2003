@model LetUsBringYourHomeStyle.Models.Namjestaj

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Namjestaj</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kategorija" class="control-label"></label>
                <select asp-for="Kategorija" class="form-control"></select>
                <span asp-validation-for="Kategorija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stil" class="control-label"></label>
                <input asp-for="Stil" class="form-control" />
                <span asp-validation-for="Stil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materijal" class="control-label"></label>
                <input asp-for="Materijal" class="form-control" />
                <span asp-validation-for="Materijal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dezen" class="control-label"></label>
                <input asp-for="Dezen" class="form-control" />
                <span asp-validation-for="Dezen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br /> 
<p>
    <a asp-action="Index" asp-controller="Home">Nazad na početnu</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
